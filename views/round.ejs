<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- <link href="/css/bootstrap.min.css" rel="stylesheet"> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Rounds</title>
</head>

<body>
    <div class="container-fluid">
        <div class="row g-3">

            <% round.forEach((r, idx, rarray) => { %>
            <div class="col-xs-12 col-sm-12 col-md-6 mb-4" >
                <div class="row mt-2 mb-2">
                    <div class="col-md-8 col-sm-8 col-xs-8">
                        <div class="text-center display-6"> <%= r.title %></div>
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-4 text-right">
                        <div class="pt-3 text-right">
                        <%= r.date %>
                        </div>
                    </div>
                </div>
                <% r.groups.forEach((g, gidx, garray) => { %>
                <div class="row mb-3">
                    <div class="row">
                        <div style="background-color: lightgrey" class="p-1 border col-md-2 col-sm-2 col-xs-2"> <b><%= g.name %></b></div>
                        

                        <div style="background-color: lightgrey" class="p-1 border col-md-2 col-sm-2 col-xs-2 text-center"><b> Hdcp </b></div>
                        <div style="background-color: lightgrey" class="p-1 border col-md-3 col-sm-3 col-xs-3 text-center"><b> Red </b></div>

                        <div style="background-color: lightgrey" class="p-1 border col-md-2 col-sm-2 col-xs-2 text-center"><b> Hdcp </b></div>
                        <div style="background-color: lightgrey" class="p-1 border col-md-3 col-sm-3 col-xs-3 text-center"><b> Blue </b></div>
                    </div>
                    <div class="row">
                        <div style="background-color: lightgrey" class="p-1 border col-md-2 col-sm-2 col-xs-2 text-center"> </div>
                        

                        <div class="p-1 border col-md-2 col-sm-2 col-xs-2 text-center"> <%= g.p1.Hdcp %></div>
                        <div id="<%= g.p1._id %>" class="p-1 border col-md-3 col-sm-3 col-xs-3 text-center"> <%= g.p1.alias %></div>

                        <div class="p-1 border col-md-2 col-sm-2 col-xs-2 text-center"> <%= g.p3.Hdcp %></div>
                        <div id="<%= g.p3._id %>" class="p-1 border col-md-3 col-sm-3 col-xs-3 text-center"><%= g.p3.alias %></div>
                    </div>

                    <div class="row">
                        <div style="background-color: lightgrey" class="p-1 border col-md-2 col-sm-2 col-xs-2 text-center"><b> <%= g.teeTime %></b></div>

                        <div class="p-1 border col-md-2 col-sm-2 col-xs-2 text-center"><%= g.p2.Hdcp %></div>
                        <div id="<%= g.p2._id %>" class="p-1 border col-md-3 col-sm-3 col-xs-3 text-center"><%= g.p2.alias %></div>

                        <div class="p-1 border col-md-2 col-sm-2 col-xs-2 text-center"><%= g.p4.Hdcp %></div>
                        <div id="<%= g.p4._id %>" class="p-1 border col-md-3 col-sm-3 col-xs-3 text-center"><%= g.p4.alias %></div>
                    </div>
                </div>
                <% }) %>
            </div>
            <% }) %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
</body>

</html>