<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- <link href="/css/bootstrap.min.css" rel="stylesheet"> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    <link href="/css/style.css" rel="stylesheet">
    
    <title>Rounds</title>
</head>

<body>
    <div class="container">
        

            <% r = round %>
             
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr><th colspan="5"><%= r.course.name %></th></tr>
                    <tr><th colspan="3"><%= r.title %></th>
                    <th style="text-align: right;" colspan="2"><%= r.date %></th></tr>
                </thead>                 
                 
                <% r.groups.forEach((g, gidx, garray) => { %>
                    <thead style="border-top: 1px solid grey;border-bottom: 1px solid grey;padding: 1px;margin:1px" class="table-header">
                    <tr class="table-header">
                        <th class="normText" style="padding: 1px;margin:1px;text-align:center;"><%= g.name %></th>
                        <th class="normText" style="padding: 1px;margin:1px;text-align:center;">Hdcp</th>
                        <th class="normText" style="padding: 1px;margin:1px;text-align:center;">Blue</th>
                        <th class="normText" style="padding: 1px;margin:1px;text-align:center;">Hdcp</th>
                        <th class="normText" style="padding: 1px;margin:1px;text-align:center;">Red</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <th style="vertical-align: middle;text-align: center;" class="normText" rowspan="2" scope="row"><%= g.teeTime %></th>
                        <td style="vertical-align: middle;text-align: right;" class="normText"><span class="bluetext"><%= g.p1.Hdcp %></span></td> 
                        <td class="normText"><span class="bluetext"><%= g.p1.alias %></span></td>
                        <td style="vertical-align: middle;text-align: right;" class="normText"><span class="redtext"><%= g.p3.Hdcp %></span></td>
                        <td class="normText"><span class="redtext"><%= g.p3.alias %></span></td>
                    </tr>

                    <tr>
                        
                        <td style="vertical-align: middle;text-align: right;" class="normText"><span class="bluetext"><%= g.p2.Hdcp %></span></td> 
                        <td class="normText"><span class="bluetext"><%= g.p2.alias %></span></td>
                        <td style="vertical-align: middle;text-align: right;" class="normText"><span class="redtext"><%= g.p4.Hdcp %></span></td>
                        <td class="normText"><span class="redtext"><%= g.p4.alias %></span></td>
                    </tr>
                    
                </tbody>
                <% }) %>
            </div>
        
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
</body>

</html>