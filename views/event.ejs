<body>
    <div class="content">
        <div id="splash">
            <img src="/img/km-logo-splash-1.png" class="logo">
        </div>
        <header class="app-header">
            <div class="container">
                <img class="logo" src="/img/km-logo-blktext-white-outline-1.png" alt="" />
                <h1>Southern Invitational</h1>
                
            </div>
        </header>
        <div class="grid">
            
            <% round.forEach((r, idx, rarray) => { %>     
                <div class="cardbox" onclick="location.href='http://localhost:3998/leaderboard/round/<%= r._id %>'">
                    <h4><%= r.course.name %></h4>
                        
                    <p><%= r.title %></p>
                    <p><%= r.date %></p>
                    
                </div>
                
            <% }) %>
        </div>    
    </div>

    <script>
        function fadeOut(target) {
            var e = document.getElementById(target);
            var fadeEffect = setInterval(function() {
                if (!e.style.opacity) {
                    e.remove()
                }
                if (e.style.opacity > 0) {
                    e.style.opacity = 0;
                }
                else {
                    clearInterval(fadeEffect);
                }
            }, 2000);
        }

        document.addEventListener("DOMContentLoaded", () => {
            fadeOut('splash');

